<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project2.View.Encrypt"
             Title="Password Safe">

  <ContentPage.Content Padding="10,20,10,5" BackgroundColor="Teal">
    <StackLayout Orientation="Vertical" Padding="20" BackgroundColor="Teal">
      <Label WidthRequest = "100" Text = "Password Encryption" HorizontalTextAlignment="Center" FontSize = "20" TextColor = "Color.White"/>

      <StackLayout Orientation="Vertical" Padding="20" BackgroundColor="Teal" Spacing="8">
        <Label WidthRequest="100" Text="Password" HorizontalTextAlignment="Start" FontSize="16" TextColor="Color.White"/>
        <Entry x:Name="txtPassword" HeightRequest="40" WidthRequest="100" Placeholder="Enter a password to encrypt" HorizontalOptions="LayoutOptions.FillAndExpand"/>

      </StackLayout>
      <Button HeightRequest = "70" WidthRequest = "100" Text = "Encrypt" HorizontalOptions = "LayoutOptions.FillAndExpand" BorderWidth = "1" BorderRadius = "2" />
    </StackLayout>
  </ContentPage.Content>

</ContentPage>